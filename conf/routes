# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Sign in/up and edit profil pages

POST    /signup                     controllers.Signup.submit
GET     /signup                     controllers.Signup.setup

POST    /signin                     controllers.Auth.login
GET     /signin                     controllers.Auth.setup
GET     /logout                     controllers.Auth.logout

GET     /account/edit               controllers.EditAccount.setup
POST    /account/edit               controllers.EditAccount.edit

# API to call the Yahoo finance API
GET     /quotes                     controllers.FinanceAPI.multipleQuotes
GET     /currency/:to/:from         controllers.FinanceAPI.currency(to, from)
GET     /quote/:name                controllers.FinanceAPI.quote(name)
GET     /history/:name/:from/:to    controllers.FinanceAPI.history(name, from, to)

# Buying, selling stocks and currency operations
GET     /quote/buy/:from        controllers.Operation.buyStock(from, number: Int ?= 1)
GET     /quote/sell/:from       controllers.Operation.sellStock(from, number: Int ?= 1)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# Dev part
GET    /users/delete                controllers.Signup.delete
GET    /users/printall              controllers.Signup.print
GET    /capital/add/:value          controllers.EditAccount.opCapital(value:Double, op : Boolean=true)
GET    /capital/sub/:value          controllers.EditAccount.opCapital(value:Double, op : Boolean=false)
