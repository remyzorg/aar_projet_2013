# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Sign in/up and edit profil pages

POST    /signup                     controllers.Signup.submit
GET     /signup                     controllers.Signup.setup

POST    /signin                     controllers.Auth.login
GET     /signin                     controllers.Auth.setup
GET     /logout                     controllers.Auth.logout

GET     /account/edit               controllers.EditAccount.setup
POST    /account/edit               controllers.EditAccount.edit

# API to call the Yahoo finance API
GET     /quotes                     controllers.Application.multipleQuotes
GET     /currency/:to/:from         controllers.Application.currency(to, from)
GET     /quote/:name                controllers.Application.quote(name)
GET     /history/:name/:from/:to    controllers.Application.history(name, from, to)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# Dev part
GET    /users/delete                   controllers.Signup.delete
GET    /users/print                    controllers.Signup.print
