# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Sign in pages

POST    /signin                     controllers.Signin.submit
GET     /signin                     controllers.Signin.setup

# API to call the Yahoo finance API
GET     /currency/:to/:from         controllers.Application.currency(to, from)
GET     /quote/:name                controllers.Application.quote(name)
GET     /history/:name/:from/:to    controllers.Application.history(name, from, to)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# Dev part
GET    /users/delete                   controllers.Signin.delete
